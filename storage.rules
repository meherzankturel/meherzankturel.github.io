rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write review files
    // This allows both partners to upload and view each other's review media
    match /reviews/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow authenticated users to upload and view daily moments
    // This allows both partners to upload and view each other's moments
    match /moments/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // More restrictive rule (uncomment after testing):
    // Allow users to upload to their own folder, but read all reviews
    // match /reviews/{dateNightId}/{userId}/{allPaths=**} {
    //   allow read: if request.auth != null;
    //   allow write: if request.auth != null && request.auth.uid == userId;
    // }
  }
}

