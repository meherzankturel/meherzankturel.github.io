# Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===================
# DATABASE
# ===================
# MongoDB Atlas connection string
# Get this from MongoDB Atlas: Database > Connect > Connect your application
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# ===================
# SERVER
# ===================
# Server port (default: 3000)
PORT=3000

# Environment: development | production | test
NODE_ENV=development

# ===================
# CORS
# ===================
# Frontend URL for CORS (production)
# Use comma-separated values for multiple URLs
FRONTEND_URL=https://your-app.vercel.app

# ===================
# FIREBASE ADMIN
# ===================
# Firebase project ID (required for token verification)
FIREBASE_PROJECT_ID=boundless-d2a20

# Firebase service account JSON (for production)
# Option 1: Set the entire JSON as an environment variable
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account",...}

# Option 2: Use a path to the service account file
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# ===================
# RATE LIMITING (Optional)
# ===================
# Requests per minute for general API
RATE_LIMIT_GENERAL=100

# Requests per minute for file uploads
RATE_LIMIT_UPLOAD=20

# ===================
# FILE UPLOAD (Optional)
# ===================
# Maximum file size in bytes (default: 50MB)
MAX_FILE_SIZE=52428800

# Maximum files per upload batch (default: 10)
MAX_FILES_PER_UPLOAD=10
